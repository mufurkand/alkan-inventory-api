generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Part {
  id           Int      @id @default(autoincrement())
  materialType String
  partNumber   String   @unique
  location     String
  price        Decimal? @db.Decimal(12, 2)
  quantity     Int
  channel      String?
  caseType     String?
  voltage      String?
  current      String?
  value        String?
  unit         String?
  power        String?
  description  String?
  imagePath    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
